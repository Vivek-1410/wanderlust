<% const user = (typeof currUser !== "undefined") ? currUser : null; %>

<style>
  .search-btn {
    display: flex;
    align-items: center;
    margin-right: 1rem;
    background-color: rgb(239, 105, 127);
    color: #fff;
    border-radius: 25px;
    padding: 0.5rem 1rem;
    border: none;
  }

  .search-btn:hover {
    background-color: rgb(220, 85, 110);
  }

  .search-inp {
    padding: 0 3rem;
    border-radius: 25px;
  }
</style>

<nav class="navbar navbar-expand-md bg-body-tertiary sticky-top border-bottom" id="navbar">
  <div class="container-fluid" id="container">

    <!-- Brand -->
    <a class="navbar-brand" href="/listings">
      <i class="fa-regular fa-compass"></i>
    </a>

    <!-- Toggler -->
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" onclick="toggleMargin()">
      <span class="navbar-toggler-icon"></span>
    </button>

    <!-- Nav Content -->
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">

      <!-- Left -->
      <div class="navbar-nav">
        <a class="nav-link" href="/listings">Explore</a>
      </div>

      <!-- Search -->
      <div class="navbar-nav ms-auto">
        <form class="d-flex" role="search" method="POST" action="/listings/place">
          <input
            class="form-control me-2 search-inp"
            type="search"
            placeholder="Search destinations"
            aria-label="Search"
            name="search_dest"
          />
          <button class="btn search-btn" type="submit">
            <i class="fa-solid fa-search me-2"></i> Search
          </button>
        </form>
      </div>

      <!-- Right Auth -->
      <div class="navbar-nav ms-auto">

        <a class="nav-link" href="/listings/new">Host your space</a>

        <% if (!user) { %>
          <a class="nav-link" href="/signup"><b>Sign up</b></a>
          <a class="nav-link" href="/login"><b>Log in</b></a>
        <% } else { %>
          <a class="nav-link" href="/logout"><b>Log out</b></a>
        <% } %>

      </div>
    </div>
  </div>
</nav>

<script>
  function toggleMargin() {
    const navbar = document.getElementById("navbar");
    const container = document.getElementById("container");

    if (navbar.style.marginBottom === "10rem") {
      navbar.style.marginBottom = "1rem";
    } else {
      navbar.style.marginBottom = "10rem";
      container.style.backgroundColor = "whitesmoke";
    }
  }
</script>
