
<style>
  .search-btn {
    display: flex;
    align-items: center;
    margin-right: 1rem;
    background-color: rgb(239, 105, 127);
    color: #fff;
    border-radius: 25px;
    padding: 0.5rem 1rem 0.5rem 1rem;
  }

  .search-inp {
    padding: 0 3rem 0 3rem;
    border-radius: 25px;
  }




</style>

<nav class="navbar navbar-expand-md bg-body-tertiary sticky-top border-bottom " id="navbar">
    <div class="container-fluid" id="container">
      <a class="navbar-brand" href="/listings"><i class="fa-regular fa-compass"></i></a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" onclick="margin()">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
        <div class="navbar-nav" id="explore">
          <a class="nav-link" href="/listings">Explore</a>
        </div>
        <div class="navbar-nav ms-auto" >
          <form class="d-flex"  role="search" method="POST" action="/listings/place">
            <input class="form-control me-2 search-inp" type="search" placeholder="Search Destinations" aria-label="Search" name="search_dest">
            <button class="btn search-btn " type="submit"><i class="fa-solid fa-search" style="margin-right: 0.5rem;" ></i>Search</button>
          </form>
        </div>
        <div class="navbar-nav ms-auto">
          <a class="nav-link" href="/listings/new">Host your space </a>
        <% if (!currUser) { %> 
          <a class="nav-link" href="/signup"><b>Sign up</b></a>
          <a class="nav-link" href="/login"><b>Log in</b></a>
          <% } %>
          <% if (currUser) { %>
          <a class="nav-link" href="/logout"><b>Log out</b></a>
          <% } %>
        </div>
      </div>
    </div>
  </nav>


  <script>
      function margin() {
        if (document.getElementById("navbar").style.marginBottom === "10rem") {
          document.getElementById("navbar").style.marginBottom = "1rem";
        } else {
          document.getElementById("navbar").style.marginBottom = "10rem";
          document.getElementById("container").style.backgroundColor = "whitesmoke";
        }
      }
  </script>